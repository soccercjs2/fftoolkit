
@{
    ViewBag.Title = "Player Trade Values";
}

@section scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').DataTable();

            //$(".passing").hide();
            //$(".rushing").hide();
            $(".receiving").hide();
        });
    </script>

}

<link rel="stylesheet" type="text/css" href="~/DataTables/datatables.min.css" />

<h2>Find Trades</h2>

<div class="row">
    <div class="col-sm-12 col-md-4 col-lg-3">
        <div class="card">
            <div class="card-header">My Team</div>
            <div class="list-group ">
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    Leveon Bell (RB, PIT)
                </div>
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    Running Back
                </div>
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    <span class="trade-filter-item-default">
                        (any player/position)
                    </span>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">My Team</div>
            <div class="list-group">
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    Wide Receiver
                </div>
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    <span class="trade-filter-item-default">
                        (any player/position)
                    </span>
                </div>
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    <span class="trade-filter-item-default">
                        (any player/position)
                    </span>
                </div>
            </div>
        </div>
        <input type="submit" value="Find Trades" class="btn btn-primary" />
    </div>

    <div class="col-sm-12 col-md-8 col-lg-9">

        <div>
            <div class="card">
                <div class="card-footer">
                    <div class="row">
                        <div class="col-sm-4">Filter 1</div>
                        <div class="col-sm-4">Filter 2</div>
                        <div class="col-sm-4">Filter 3</div>
                    </div>
                </div>
            </div>
        </div>

        @for (int i = 0; i <= 5; i++)
        {
            <div class="card trade">
                <div>
                    <div class="row">
                        <div class="col-md-6" style="border-right: 1px solid rgba(0, 0, 0, 0.125);">
                            <div class="trade-side-body trade-side-body-left">
                                <div class="row">
                                    <div class="col-sm-9">David Johnson (RB, ARI)</div>
                                    <div class="col-sm-3 trade-value">23.54</div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-9">Case Keenum (QB, DEN)</div>
                                    <div class="col-sm-3 trade-value">18.22</div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-9">Mike Evans (WR, TB)</div>
                                    <div class="col-sm-3 trade-value">17.79</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="trade-side-body trade-side-body-right">
                                <div class="row">
                                    <div class="col-sm-9">Ezekiel Elliot (RB, DAL)</div>
                                    <div class="col-sm-3 trade-value">16.10</div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-9">Todd Gurley (RB, LAR)</div>
                                    <div class="col-sm-3 trade-value">21.38</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 total-trade-value">
                            9.82
                        </div>
                        <div class="col-md-6 total-trade-value">
                            4.77
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="tradeFilterModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Select a Player or Position</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">Player</div>
                            <div class="list-group ">
                                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                                    Case Keenum (QB, DEN)
                                </div>
                                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                                    Leveon Bell (RB, PIT)
                                </div>
                                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                                    David Johnson (RB, ARI)
                                </div>
                                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                                    Antonio Brown Bell (WR, PIT)
                                </div>
                                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                                    Mide Evans (WR, TB)
                                </div>
                                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                                    Delanie Walker (TE, TEN)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">Position</div>
                            <div class="list-group ">
                                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                                    Quarterback
                                </div>
                                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                                    Running Back
                                </div>
                                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                                    Wide Receiver
                                </div>
                                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                                    Tight End
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>