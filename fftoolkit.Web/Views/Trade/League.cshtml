<link rel="stylesheet" type="text/css" href="~/DataTables/datatables.min.css" />

<h2>Find Trades</h2>

<div class="row">
    <div class="col-sm-12 col-md-4 col-lg-3 trade-filters">
        <div class="card">
            <div class="card-header">My Team</div>
            <div class="list-group ">
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    Leveon Bell (RB, PIT)
                </div>
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    Running Back
                </div>
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    <span class="trade-filter-item-default">
                        (any player/position)
                    </span>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">Their Team</div>
            <div class="list-group">
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    Wide Receiver
                </div>
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    <span class="trade-filter-item-default">
                        (any player/position)
                    </span>
                </div>
                <div class="list-group-item list-group-item-action trade-filter-item" data-toggle="modal" data-target="#tradeFilterModal">
                    <span class="trade-filter-item-default">
                        (any player/position)
                    </span>
                </div>
            </div>
        </div>
        <input type="submit" value="Find Trades" class="btn btn-primary" />
    </div>

    <div class="col-sm-12 col-md-8 col-lg-9">

        @for (int i = 0; i < 3; i++)
        {
            <div class="row trade" data-toggle="modal" data-target="#tradeModal">
                <div class="col-md-12 col-lg-6">
                    <div class="card">
                        <div class="card-header you-get-header">
                            You Get
                        </div>
                        <div class="card-body trade-body">
                            <div>
                                <div class="trade-player">Case Keenum (QB, DEN)</div>
                                <div class="trade-player-points">18.22</div>
                            </div>
                            <div>
                                <div class="trade-player">David Johnson (RB, ARI)</div>
                                <div class="trade-player-points">23.54</div>
                            </div>
                            <div>
                                <div class="trade-player">Ezekiel Elliot (RB, DAL)</div>
                                <div class="trade-player-points">21.33</div>
                            </div>
                        </div>
                        <div class="card-footer trade-footer">
                            <div class="trade-value">
                                +4.77 PPG
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="card">
                        <div class="card-header they-get-header">
                            They Get
                        </div>
                        <div class="card-body trade-body">
                            <div>
                                <div class="trade-player">Case Keenum (QB, DEN)</div>
                                <div class="trade-player-points">18.22</div>
